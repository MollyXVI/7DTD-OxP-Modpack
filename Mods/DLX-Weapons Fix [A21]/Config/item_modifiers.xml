<!-- MUZZLE BRAKE -->	
	<append xpath="/item_modifiers/item_modifier[@name='modGunMuzzleBrake']">
	<!-- 	TRYING DESPERATELY TO LOAD THE MUZZLE BRAKE AND THE EXTENDER BARREL MOD. 
			If I install the mod on a not equipped gun and then switch to it, the brake/extender won't show up.
			If I load the game and switch weapon to the modded one, the mod doesn't show up.
			So I'm trying to trigger every possible buff in order to show the brake/extender.
			Note: trigger "onSelfEnteredGame" doesn't work.	-->
		
		<effect_group tiered="false" name="MuzzleBrake DLX attachments">	
			<requirement name="HoldingItemHasTags" tags="DLXAttachments"/>
			<triggered_effect trigger="onSelfHoldingItemCreated" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>
			<triggered_effect trigger="onSelfEquipStart" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>	
			<triggered_effect trigger="onSelfEnteredGame" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>			
			<triggered_effect trigger="onSelfAimingGunStart" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>			
			<triggered_effect trigger="onSelfPrimaryActionStart" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>			
			<triggered_effect trigger="onSelfRun" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>			
			<triggered_effect trigger="onSelfStand" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>			
			<triggered_effect trigger="onSelfWalk" action="SetTransformActive" active="true" parent_transform="Attachment" transform_path="MuzzleBrake"/>			
		</effect_group>

	</append>

